<!DOCTYPE html>
<html>
  <head>
    <title>MyMembers</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
         <div class="col-4 text-center">
          <% if flash[:notice] %>
            <div class="text-success">
              <p class="notice"><%= notice %></p>
            </div>
          <% end %>

          <% if flash[:alert] %>
            <div class="text-danger">
              <p class="alert"><%= alert %></p>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <nav class="navbar w-100 navbar-expand-md navbar-light bg-light">
          <div>
            <%= link_to root_path, class:'navbar-brand' do %>
              <h1>Members Club </h1>
            <% end %>
          </div>
  
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">


              <% if member_signed_in? %>

                <%= link_to new_post_path, class: 'nav-item' do%>
                  <li type="li" class="btn btn-primary nav-link">New Post</li>
                <% end %>

                <%= link_to destroy_member_session_path, method: :delete, class: 'nav-item' do%>
                  <li  class=" nav-link">Sign Out</li>
                <% end %>

              <% else %>

                <%= link_to new_member_registration_path, class: 'nav-item' do%>
                  <li  class=" nav-link">Sign Up</li>
                <% end %>

                <%= link_to new_member_session_path, class: 'nav-item' do%>
                  <li  class=" nav-link">Login</li>
                <% end %>

              <% end %>
 
            </ul>
          </div>
        </nav>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
<% if member_signed_in? %>
  
<% else %> 
  
<% end %>
